    "//qorai/browser/qorai_vpn/qorai_vpn_service_factory.h",
  ]

  if (is_win) {
    qorai_browser_qorai_vpn_sources += [
      "//qorai/browser/qorai_vpn/dns/qorai_vpn_dns_observer_factory_win.cc",
      "//qorai/browser/qorai_vpn/dns/qorai_vpn_dns_observer_factory_win.h",
