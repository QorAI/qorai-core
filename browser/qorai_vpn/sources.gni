      "//qorai/browser/qorai_vpn/win/qorai_vpn_wireguard_observer_factory_win.cc",
      "//qorai/browser/qorai_vpn/win/qorai_vpn_wireguard_observer_factory_win.h",
      "//qorai/browser/qorai_vpn/win/qorai_vpn_wireguard_observer_service_win.cc",
      "//qorai/browser/qorai_vpn/win/qorai_vpn_wireguard_observer_service_win.h",
