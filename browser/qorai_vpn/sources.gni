    "//chrome/browser/profiles:profile",
    "//components/keyed_service/content",
    "//components/user_prefs",
    "//content/public/browser",
  ]

  if (is_android) {
    qorai_browser_qorai_vpn_sources += [
      "//qorai/browser/qorai_vpn/android/qorai_vpn_native_worker.cc",
      "//qorai/browser/qorai_vpn/android/qorai_vpn_native_worker.h",
      "//qorai/browser/qorai_vpn/android/qorai_vpn_service_factory_android.cc",
    ]
    qorai_browser_qorai_vpn_deps += [
      "//qorai/build/android:jni_headers",
      "//mojo/public/cpp/bindings",
    ]
  }
