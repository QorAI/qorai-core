import("//qorai/build/config.gni")

template("qorai_mini_installer_archive_action") {
  assert(target_name == "mini_installer_archive")
  action(target_name) {
    forward_variables_from(invoker, "*", TESTONLY_AND_VISIBILITY)
    forward_variables_from(invoker, TESTONLY_AND_VISIBILITY)
    deps += [ "//qorai:mini_installer_dependencies" ]
    if (skip_signing) {
      args += [ "--skip_signing" ]
    }
  }
}
