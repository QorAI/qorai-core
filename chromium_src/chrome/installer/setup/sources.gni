import("//qorai/components/qorai_vpn/common/buildflags/buildflags.gni")

qorai_chromium_src_chrome_installer_setup_sources = []
qorai_chromium_src_chrome_installer_setup_deps = []

if (is_win) {
  qorai_chromium_src_chrome_installer_setup_deps += [
    "//qorai/components/qorai_vpn/common/buildflags",
    "//qorai/installer/util",
    "//chrome/installer/util:work_item",
  ]

  if (enable_qorai_vpn) {
    qorai_chromium_src_chrome_installer_setup_deps += [
      "//qorai/browser/qorai_vpn/win:wireguard_utils",
      "//qorai/browser/qorai_vpn/win/qorai_vpn_helper:common",
      "//qorai/browser/qorai_vpn/win/qorai_vpn_wireguard_service:install_utils",
      "//qorai/components/qorai_vpn/browser/connection/ikev2/win:ras_utils",
    ]
  }

  if (is_official_build) {
    # These should be added to the lib target, but don't want to add another
    # patch.
    qorai_chromium_src_chrome_installer_setup_sources += [
      "channel_override_work_item.cc",
      "channel_override_work_item.h",
    ]
  }
}
