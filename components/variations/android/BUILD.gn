import("//qorai/components/variations/buildflags.gni")
import("//build/config/android/rules.gni")

android_library("java") {
  sources = [ "java/src/org/chromium/components/variations/firstrun/QorAIVariationsSeedFetcher.java" ]
  deps = [
    "//base:base_java",
    "//components/variations:variations_java",
    "//components/variations/android:variations_java",
    "//third_party/androidx:androidx_annotation_annotation_java",
  ]
  srcjar_deps = [ ":qorai_variations_config_java" ]
}

java_cpp_template("qorai_variations_config_java") {
  sources = [ "java/src/org/chromium/components/variations/firstrun/QorAIVariationsConfig.template" ]
  defines =
      [ "QORAI_ANDROID_VARIATIONS_SERVER_URL=\"$qorai_variations_server_url\"" ]
}
