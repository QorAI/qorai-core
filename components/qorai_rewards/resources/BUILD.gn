import("//qorai/components/common/typescript.gni")
import("//qorai/resources/qorai_grit.gni")
import("//tools/grit/repack.gni")

pack_web_resources("internals_generated_resources") {
  resource_name = "rewards_internals"
  output_dir = "$root_gen_dir/qorai/components/qorai_rewards/resources"

  # need webpack and GRD generation first
  deps = [ "rewards_internals" ]
}

qorai_grit("static_resources") {
  source = "qorai_rewards_static_resources.grd"

  outputs = [
    "grit/qorai_rewards_resources.h",
    "qorai_rewards_static.pak",
  ]
}

repack("resources") {
  public_deps = [
    ":internals_generated_resources",
    ":static_resources",
    "creator_detection:creator_detection_generated",
    "rewards_page:rewards_page_generated",
  ]

  sources = [
    "$root_gen_dir/qorai/components/qorai_rewards/resources/qorai_rewards_static.pak",
    "$root_gen_dir/qorai/components/qorai_rewards/resources/creator_detection_generated.pak",
    "$root_gen_dir/qorai/components/qorai_rewards/resources/rewards_internals_generated.pak",
    "$root_gen_dir/qorai/components/qorai_rewards/resources/rewards_page_generated.pak",
  ]

  output = "$root_gen_dir/qorai/components/qorai_rewards/resources/qorai_rewards_resources.pak"
}
