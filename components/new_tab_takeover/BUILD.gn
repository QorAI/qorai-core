import("//qorai/components/common/typescript.gni")
import("//mojo/public/tools/bindings/mojom.gni")

transpile_web_ui("new_tab_takeover_ui") {
  output_module = false
  resource_name = "new_tab_takeover"
  entry_points = [ [
        "new_tab_takeover",
        rebase_path("new_tab_takeover.tsx"),
      ] ]
  public_deps = [
    "//qorai/components/qorai_ads/core/mojom:mojom_js",
    "//qorai/components/new_tab_takeover/mojom:mojom_js",
    "//qorai/components/ntp_background_images/browser/mojom:mojom_js",
