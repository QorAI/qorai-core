    "//qorai/components/qorai_wallet_ui/",
    "//qorai/components/qorai_rewards/resources/rewards_page/",
    "//qorai/components/",
  ]
}

pack_web_resources("qorai_wallet_deposit_page_generated") {
  resource_name = "qorai_wallet_deposit_page"
  output_dir = "$root_gen_dir/qorai/components/qorai_wallet_page/resources"
  deps = [ ":qorai_wallet_deposit_page_ui" ]
}
