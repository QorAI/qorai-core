import("//qorai/components/common/typescript.gni")
import("//chrome/common/features.gni")
import("//mojo/public/tools/bindings/mojom.gni")

transpile_web_ui("qorai_wallet_deposit_page_ui") {
  output_module = false
  entry_points = [ [
        "qorai_wallet_deposit_page",
        rebase_path("deposit-funds.tsx"),
      ] ]
  resource_name = "qorai_wallet_deposit_page"
  deps = [
    "//qorai/components/qorai_wallet/common:mojom_js",
    "//qorai/components/qorai_wallet/common:preprocess_mojo",
  ]
