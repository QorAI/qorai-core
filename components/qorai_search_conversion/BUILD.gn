    "features.h",
    "p3a.cc",
    "p3a.h",
    "pref_names.h",
    "types.h",
    "utils.cc",
    "utils.h",
  ]

  deps = [
    "//base",
    "//qorai/components/p3a_utils",
    "//qorai/components/search_engines",
    "//components/prefs",
    "//components/search_engines",
    "//url",
