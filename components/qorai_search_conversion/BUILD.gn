# Below content/test:test_support is not allowed to evaluate on ios.
# Although this test target is not built on ios as qorai/test/BUILD.gn
# is not included, this file is included from other targets on ios.
# TODO(simonhong): Check whether we could prevent this file including on iOS.
if (!is_ios) {
  source_set("unit_tests") {
    testonly = true

    sources = [
      "qorai_search_conversion_unittest.cc",
      "p3a_unittest.cc",
    ]

    deps = [
      ":qorai_search_conversion",
      "//base",
      "//base/test:test_support",
      "//qorai/components/search_engines",
      "//components/prefs",
      "//components/prefs:test_support",
      "//components/search_engines",
      "//components/search_engines:test_support",
      "//content/test:test_support",
      "//testing/gtest",
    ]
  }
}
