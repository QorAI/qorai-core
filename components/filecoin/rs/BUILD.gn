import("//build/rust/rust_static_library.gni")

rust_static_library("rust_lib") {
  visibility = [
    "//qorai/browser/qorai_wallet:unit_tests",
    "//qorai/components/qorai_wallet/browser:*",
    "//qorai/components/qorai_wallet/browser/test:*",
    "//qorai/components/ipfs",
  ]
  crate_name = "filecoin_cxx"
  crate_root = "src/lib.rs"
  allow_unsafe = true
  sources = [ "src/lib.rs" ]
  cxx_bindings = [ "src/lib.rs" ]

  deps = [ "//qorai/third_party/rust/cid/v0_11:lib" ]
}
