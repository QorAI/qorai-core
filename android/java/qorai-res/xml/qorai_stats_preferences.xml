<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="qorai_stats"
        android:title="@string/qorai_stats"
        android:summary="@string/allows_qorai_to_show" />

    <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
        android:key="qorai_stats_notification"
        android:title="@string/qorai_stats_notification"
        android:summary="@string/sends_a_weekly" />

    <Preference
