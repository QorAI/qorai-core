<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:key="qora_category"
        android:title="@string/qora_summary">

        <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
            android:key="autocomplete_switch"
            android:title="@string/qora_autocomplete_pref"
            android:defaultValue="true" />
        
        <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
            android:key="qora_quick_search_engine"
            android:title="@string/qora_quick_search_engine_pref"
            android:summary="@string/qora_quick_search_engine_summary"
            android:defaultValue="true" />

        <org.chromium.components.browser_ui.settings.ChromeSwitchPreference
            android:key="history_switch"
            android:title="@string/qora_history_pref"
            android:defaultValue="true"
            app:isPreferenceVisible="false" />

        <Preference
            android:fragment="org.chromium.chrome.browser.settings.QoraiQoraDefaultModelPreferences"
            android:key="default_model"
            android:title="@string/qora_default_model_pref" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="subscription_category"
        android:title="@string/qora_subscription_pref">

        <org.chromium.components.browser_ui.settings.ChromeBasePreference
            android:key="link_subscription"
            android:title="@string/link_subscription_titleqora"
            android:summary="@string/link_subscription_summaryqora"
            app:isPreferenceVisible="false"/>
        <org.chromium.components.browser_ui.settings.ChromeBasePreference
            android:key="subscription_manage"
            android:title="@string/manage_subscriptionqora"
            app:isPreferenceVisible="false"/>
        <org.chromium.components.browser_ui.settings.ChromeBasePreference
            android:key="go_premium"
            android:title="@string/qora_go_premium_pref"
            app:isPreferenceVisible="false"/>

    </PreferenceCategory>

    <org.chromium.chrome.browser.settings.QoraiQoraResetPreference
        android:key="reset_data"
        android:title="@string/qora_reset_data"/>
</PreferenceScreen>
