<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_add_laptop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp" >

    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingHorizontal="2dip"
        android:paddingTop="2dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="15dip"
            android:paddingBottom="15dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qorai_sync_add_laptop_text_title"
                style="@style/QoraiSyncTitleTextHeadingH4"
                android:gravity="top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qorai_sync_add_laptop_text"
                android:gravity="top"
                android:layout_marginTop="20dp"
                style="@style/QoraiSyncDescriptionTextDefaultRegular"  />

            <TextView android:id="@+id/qorai_sync_warning_text_add_laptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/QoraiSyncRedWarningTextSmallSemibold"
                android:text="@string/qorai_sync_code_warning"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dip"
            android:layout_marginTop="10dp" >

            <TextView android:id="@+id/qorai_sync_add_device_code_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:textSize="12sp"
                android:background="@drawable/qorai_sync_top_rounded"
                android:padding="16dip"
                android:textColor="@color/text_primary"
                style="@style/MonospaceSmall" />
        </FrameLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/qorai_sync_count_down_code_words"
            android:name="org.chromium.chrome.browser.settings.QoraiSyncCodeCountdownFragment"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <android.widget.Button android:id="@+id/qorai_sync_copy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qorai_sync_copy_button_text"
                style="@style/QoraiSyncBottomButton"
                android:background="@android:color/transparent"
                android:textColor="@color/qorai_sync_copy_words_text_color"
                android:textSize="14sp" />

            <android.widget.Button android:id="@+id/qorai_sync_btn_add_laptop_new_code"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qorai_sync_generate_new_code_button"
                style="@style/QoraiSyncButtonTransparent"/>

            <android.widget.Button android:id="@+id/qorai_sync_btn_add_laptop_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qorai_sync_btn_done"
                android:textSize="14sp"
                style="@style/QoraiSyncButton"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
